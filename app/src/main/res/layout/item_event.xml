<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:background="@color/colorBackground">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginTop="@dimen/_15dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            
            android:id="@+id/ivJoin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_26dp"
            android:layout_marginTop="@dimen/_14dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:drawablePadding="@dimen/_10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_join"
            app:layout_constraintEnd_toEndOf="@id/thumbnail"
            app:layout_constraintTop_toTopOf="@id/thumbnail" />

        <ImageView
            android:id="@+id/imgDot"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_6dp"
            android:src="@drawable/ic_dot"
            app:layout_constraintBottom_toBottomOf="@id/tvEventDate"
            app:layout_constraintStart_toEndOf="@id/tvEventDate"
            app:layout_constraintTop_toTopOf="@id/tvEventDate" />

        <TextView

            android:id="@+id/tvEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17dp"
            android:layout_marginTop="@dimen/_13dp"
            android:layout_marginEnd="17dp"
            android:drawableStart="@drawable/ic_calender"
            android:drawablePadding="@dimen/_7dp"
            android:textColor="@color/color_common"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thumbnail" />

        <TextView
            android:id="@+id/tvGoingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6dp"
            android:textColor="@color/color_common"
            android:textSize="@dimen/_16sp"
            app:layout_constraintStart_toEndOf="@id/imgDot"
            app:layout_constraintTop_toTopOf="@id/tvEventDate" />


        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_37dp"
            android:text="@{event.name}"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEventDate" />

        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17dp"
            android:layout_marginTop="@dimen/_3dp"
            android:layout_marginEnd="@dimen/_18dp"
            android:layout_marginBottom="@dimen/_13dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{event.descriptionRaw}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEventName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="event"
            type="com.example.meetup.model.dataLocal.Event" />
    </data>
</layout>