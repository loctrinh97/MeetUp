<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivItemCategoryBackground"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_item_category_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivItemBackgroundLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_item_category_left"
        app:layout_constraintBottom_toBottomOf="@id/ivItemCategoryBackground"
        app:layout_constraintTop_toTopOf="@id/ivItemCategoryBackground"
        app:layout_constraintStart_toStartOf="@id/ivItemCategoryBackground"/>

    <ImageView
        android:id="@+id/ivItemIconLeft"
        android:layout_width="@dimen/_26dp"
        android:layout_height="@dimen/_26dp"
        android:src="@drawable/ic_item_category_fan"
        app:layout_constraintTop_toTopOf="@id/ivItemBackgroundLeft"
        app:layout_constraintStart_toStartOf="@id/ivItemBackgroundLeft"
        app:layout_constraintBottom_toBottomOf="@id/ivItemBackgroundLeft"
        app:layout_constraintEnd_toEndOf="@id/ivItemBackgroundLeft"/>

    <TextView
        android:id="@+id/tvItemName"
        android:textSize="@dimen/text_size_category"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_11dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="Art &amp; Culture"
        app:layout_constraintEnd_toStartOf="@id/ivItemIconRight"
        app:layout_constraintTop_toTopOf="@id/ivItemCategoryBackground"
        app:layout_constraintBottom_toBottomOf="@id/ivItemCategoryBackground"
        app:layout_constraintStart_toEndOf="@id/ivItemBackgroundLeft"/>

    <ImageView
        android:padding="@dimen/_10dp"
        android:id="@+id/ivItemIconRight"
        android:layout_marginEnd="@dimen/_14sp"
        android:src="@drawable/ic_item_category_right"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_37dp"
        app:layout_constraintTop_toTopOf="@id/ivItemCategoryBackground"
        app:layout_constraintBottom_toBottomOf="@id/ivItemCategoryBackground"
        app:layout_constraintEnd_toEndOf="@id/ivItemCategoryBackground"/>
</androidx.constraintlayout.widget.ConstraintLayout>