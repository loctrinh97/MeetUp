<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="news"
            type="com.example.meetup.model.News" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginBottom="13dp"
    android:paddingBottom="13dp">
    <FrameLayout

        android:id="@+id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/thumnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:profileImage="@{news.thumb}"/>
<!--        <ImageView-->
<!--           android:src="@drawable/round_frame"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"/>-->
    </FrameLayout>
    <TextView
        android:id="@+id/publish_date"
        android:drawableStart="@drawable/ic_clock_circular"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:textSize="14sp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:text="@{news.setPublishDate}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/news_title"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="@{news.title}"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/publish_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_boi"
        android:textColor="@color/color_text_defaut"
        android:textSize="14sp"
        android:layout_marginStart="17dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Bởi "
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/author"
        android:textColor="@color/color_text_defaut"
        android:textSize="14sp"

        app:layout_constraintStart_toEndOf="@id/text_boi"
        android:text="@{news.author}"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_rectangle_14"
        app:layout_constraintTop_toTopOf="@id/author"
        app:layout_constraintStart_toEndOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/author"
        />
    <TextView
        android:id="@+id/text_tu"
        android:textColor="@color/color_text_defaut"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/author"
        android:text="Từ "
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/feed"
        android:textColor="@color/color_text_defaut"
        android:textSize="14sp"

        app:layout_constraintStart_toEndOf="@id/text_tu"
        android:text="@{news.feed}"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>