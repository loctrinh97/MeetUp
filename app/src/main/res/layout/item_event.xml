<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:background="#ffffff"
        android:paddingBottom="13dp">


        <ImageView
            android:layout_marginTop="@dimen/_15dp"
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/image_join"
            android:drawablePadding="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:src="@drawable/ic_join"
            app:layout_constraintEnd_toEndOf="@id/thumbnail"
            app:layout_constraintTop_toTopOf="@id/thumbnail" />

        <TextView

            android:layout_marginTop="@dimen/_13dp"
            android:text="Thá»© 4, 2019/12/11"
            android:drawablePadding="@dimen/_7dp"
            android:drawableStart="@drawable/ic_calender"
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17dp"
            android:layout_marginEnd="17dp"
            android:textColor="@color/color_common"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thumbnail" />

        <ImageView
            android:id="@+id/dot"
            android:layout_marginEnd="@dimen/_6dp"
            android:layout_marginStart="@dimen/_6dp"
            app:layout_constraintBottom_toBottomOf="@id/event_date"
            app:layout_constraintStart_toEndOf="@id/event_date"
            app:layout_constraintTop_toTopOf="@id/event_date"
            android:src="@drawable/ic_dot"
            android:layout_width="4dp"
            android:layout_height="4dp"/>
        <TextView
            android:id="@+id/going_count"
            android:layout_marginStart="@dimen/_6dp"
            app:layout_constraintTop_toTopOf="@id/event_date"
            app:layout_constraintStart_toEndOf="@id/dot"
            android:text=""
            android:textColor="@color/color_common"
            android:textSize="@dimen/_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingEnd="2dp"
            android:paddingStart="4dp"
            app:layout_constraintTop_toTopOf="@id/event_date"
            app:layout_constraintStart_toEndOf="@id/going_count"
            android:text="@string/going_count"
            android:textColor="@color/color_common"
            android:textSize="@dimen/_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/event_name"
            android:text="@{event.name}"
            android:textStyle="bold"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_3dp"
            android:layout_marginEnd="38dp"
            android:layout_marginStart="@dimen/_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:ellipsize="end"
            android:text="@{event.descriptionRaw}"
            android:maxLines="2"
            android:layout_marginBottom="@dimen/_13dp"
            android:layout_marginEnd="@dimen/_18dp"
            android:layout_marginStart="@dimen/_17dp"
            android:layout_marginTop="@dimen/_3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="event"
            type="com.example.meetup.model.dataLocal.Event" />
    </data>
</layout>