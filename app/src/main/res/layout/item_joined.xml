<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_joined"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnViewEndTime"
        android:paddingLeft="@dimen/_20dp"
        android:paddingRight="@dimen/_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:background="@drawable/ic_btn_time"
        android:text="@string/end_today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImgEvent"
        app:cardCornerRadius="@dimen/_30dp"
        android:layout_width="0dp"
        android:layout_height="@dimen/_154dp"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginRight="@dimen/_16dp"
        app:layout_constraintDimensionRatio="2.22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnViewEndTime">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stock_photo" />

        <ImageView
            android:layout_marginStart="210dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/ic_joined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivCalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvImgEvent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_calender"
        android:layout_marginStart="33dp"
        android:layout_marginTop="@dimen/_20dp" />

    <TextView
        android:id="@+id/tvEventTime"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_18dp"
        app:layout_constraintTop_toBottomOf="@id/cvImgEvent"
        app:layout_constraintStart_toEndOf="@id/ivCalender"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/color_common"
        android:text="Thứ 4,2019/12/11"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivDot"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_marginTop="@dimen/_27dp"
        app:layout_constraintTop_toBottomOf="@id/cvImgEvent"
        app:layout_constraintStart_toEndOf="@id/tvEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_dot"/>

    <TextView
        android:id="@+id/tvPeopleJoin"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_18dp"
        app:layout_constraintTop_toBottomOf="@id/cvImgEvent"
        app:layout_constraintStart_toEndOf="@id/ivDot"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/color_common"
        android:text="40 người tham gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3dp"
        android:text="UK ports preparing to host EU customs checks"
        android:textColor="@color/black"
        android:textSize="@dimen/_16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ivCalender"
        app:layout_constraintTop_toBottomOf="@id/ivCalender" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3dp"
        android:text="When someone has a burn injury, skin is used as a natural plaster to help healing. It help stop ...."
        android:textColor="@color/color_text_default"
        android:textSize="@dimen/_14sp"
        app:layout_constraintEnd_toEndOf="@id/cvImgEvent"
        app:layout_constraintStart_toStartOf="@id/ivCalender"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>
<data>
<variable
    name="joined"
    type="com.example.meetup.model.dataLocal.News" />

</data>
</layout>