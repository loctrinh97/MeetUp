<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="601dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_btn_disable"
        android:fontFamily="sans-serif"
        android:text="ĐĂT LẠI MẬT KHẨU"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintDimensionRatio="343:60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_background_forgot_password" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="137dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_lock" />

    <ImageView
        android:id="@+id/imgRectangle"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        app:srcCompat="@drawable/ic_rectangleinput">

    </ImageView>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgRectangle"
        app:layout_constraintStart_toStartOf="@+id/imgRectangle"
        app:layout_constraintTop_toTopOf="@+id/imgRectangle"
        app:layout_constraintVertical_bias="0.523"
        app:srcCompat="@drawable/ic_icon_email_filled" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="309dp"
        android:fontFamily="sans-serif"
        android:text="Quên mật khẩu"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="343dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Vui lòng nhập email để nhận hướng dẫn đặt lại mật khẩu"
        android:textColor="#A8A2B2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="68dp"
        android:layout_height="17dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Email"
        android:textColor="#A8A2B2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgRectangle"
        app:layout_constraintStart_toStartOf="@+id/imgRectangle"
        app:layout_constraintTop_toTopOf="@+id/imgRectangle"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvMessForgot"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:textColor="#A50000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgRectangle"></TextView>

    <TextView
        android:id="@+id/tvIgnoreResetPw"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Bỏ qua"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResetPassword" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0.5dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="@+id/imgRectangle"
        app:layout_constraintTop_toTopOf="@+id/imgRectangle" />

    <EditText
        android:id="@+id/edtEmailForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:focusable="auto"
        android:fontFamily="sans-serif"
        android:hint="hovaten@rikkeisoft.com"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgRectangle"
        app:layout_constraintStart_toStartOf="@+id/imgRectangle"
        app:layout_constraintTop_toTopOf="@+id/imgRectangle"
        />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:text="Quên mật khẩu"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgBack"
        app:layout_constraintTop_toTopOf="parent"
        >
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>