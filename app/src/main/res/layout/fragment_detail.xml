<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnDetailFollow"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_btn_detail_follow"
                android:text="Theo dõi"
                android:textAllCaps="false"
                android:textColor="#5D20CD"
                app:layout_constraintStart_toStartOf="@id/tvTime"
                app:layout_constraintTop_toBottomOf="@id/tvAddressDetail" />

            <ImageView
                android:id="@+id/ivImageDetail"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:background="@drawable/stock2"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_23dp"
                android:background="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_marginStart="@dimen/_16dp"
                android:id="@+id/backgroundDetail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="181dp"
                android:background="@drawable/ic_background_detail"
                app:layout_constraintBottom_toBottomOf="@id/tvContactEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivDetailCalender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_13dp"
                android:background="@drawable/ic_detail_calender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetailTitle" />

            <ImageView
                android:id="@+id/lineBehindTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/ic_detail_line"
                app:layout_constraintStart_toStartOf="@id/tvTextTime"
                app:layout_constraintTop_toBottomOf="@id/tvTextTime" />

            <ImageView
                android:id="@+id/ivDetailPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/ic_pin_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivDetailCalender" />

            <ImageView
                android:id="@+id/lineBehindAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_19dp"
                android:background="@drawable/ic_detail_line"
                app:layout_constraintStart_toStartOf="@id/tvTextTime"
                app:layout_constraintTop_toBottomOf="@id/btnDetailFollow" />

            <ImageView
                android:id="@+id/ivDetailUserIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:background="@drawable/ic_pin_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lineBehindAddress" />

            <ImageView
                android:id="@+id/lineBehindAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_19dp"
                android:background="@drawable/ic_detail_line"
                app:layout_constraintStart_toStartOf="@id/tvTextTime"
                app:layout_constraintTop_toBottomOf="@id/tvAmount" />

            <ImageView
                android:id="@+id/ivDetailTopicIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:background="@drawable/ic_detail_icon_browse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lineBehindAmount" />

            <ImageView
                android:id="@+id/lineBehindTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_19dp"
                android:background="@drawable/ic_detail_line"
                app:layout_constraintStart_toStartOf="@id/tvTextTime"
                app:layout_constraintTop_toBottomOf="@id/tvTopic" />


            <ImageView
                android:id="@+id/ivDetailContactIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:background="@drawable/ic_detail_contact"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lineBehindTopic" />

            <ImageView
                android:id="@+id/ivExtraLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_detail_extra_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvContactEmail" />

            <ImageView
                android:id="@+id/ivExtraLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/ic_detail_extra_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEventDescription" />

            <ImageView
                android:id="@+id/ivExtraLine3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/ic_detail_extra_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvEventNear" />

            <Button
                android:id="@+id/btnJoin"
                android:textColor="#FFFFFF"
                android:text="@string/join"
                android:layout_marginStart="@dimen/_16dp"
                android:background="@drawable/ic_btn_join"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivExtraLine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnJoined"
                android:textColor="#FFFFFF"
                android:text="@string/joined"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/ic_btn_joined"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivExtraLine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginTop="@dimen/_17dp"
                android:text="UK ports preparing to host EU custom checks"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/backgroundDetail" />

            <TextView
                android:id="@+id/tvTextTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_11dp"
                android:text="@string/_time"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/ivDetailCalender"
                app:layout_constraintTop_toBottomOf="@id/tvDetailTitle" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24dp"
                android:layout_marginTop="@dimen/_11dp"
                android:text="Thứ 4, 2019/11/11"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toEndOf="@id/tvTextTime"
                app:layout_constraintTop_toBottomOf="@id/tvDetailTitle" />

            <TextView
                android:id="@+id/tvTextAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="@string/address"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/ivDetailCalender"
                app:layout_constraintTop_toBottomOf="@id/lineBehindTime" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Rikkeisoft Hà Nội"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="@id/tvTime"
                app:layout_constraintTop_toBottomOf="@id/lineBehindTime" />

            <TextView
                android:id="@+id/tvAddressDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:text="Tầng 15, tòa nhà Sông Đà, Mễ Trì, Nam Từ Liêm, Hà Nội"
                android:textColor="#A8A2B2"
                android:textSize="@dimen/_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvTime"
                app:layout_constraintTop_toBottomOf="@id/tvAddress" />


            <TextView
                android:id="@+id/tvTextAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="@string/amount"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/ivDetailCalender"
                app:layout_constraintTop_toBottomOf="@id/lineBehindAddress" />


            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:text="40 người sẽ tham gia"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="@id/tvTime"
                app:layout_constraintTop_toBottomOf="@id/lineBehindAddress" />

            <TextView
                android:id="@+id/tvTextTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="@string/topic"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/ivDetailCalender"
                app:layout_constraintTop_toBottomOf="@id/lineBehindAmount" />

            <TextView
                android:id="@+id/tvTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Công nghệ, IT"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="@id/tvTime"
                app:layout_constraintTop_toBottomOf="@id/lineBehindAmount" />

            <TextView
                android:id="@+id/tvTextContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="@string/contact"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/ivDetailCalender"
                app:layout_constraintTop_toBottomOf="@id/lineBehindTopic" />

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Vũ Hoàng Nam"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="@id/tvTime"
                app:layout_constraintTop_toBottomOf="@id/lineBehindTopic" />

            <TextView
                android:id="@+id/tvContactEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:paddingBottom="@dimen/_15dp"
                android:text="namhv@rikkeisoft.com"
                android:textColor="#A8A2B2"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="@id/tvTime"
                app:layout_constraintTop_toBottomOf="@id/tvContact" />

            <TextView
                android:id="@+id/tvTextEventDescription"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/event_description"
                android:layout_marginTop="@dimen/_15dp"
                app:layout_constraintTop_toBottomOf="@+id/ivExtraLine"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTextEventNear"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/event_near"
                android:layout_marginTop="@dimen/_15dp"
                app:layout_constraintTop_toBottomOf="@+id/ivExtraLine2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="The BBC is reporting that plans are underway for EU border checks in Britain for trade bound for Northern Ireland. The BBC has learned that freight could be diverted through ports with space for inspections such as Liverpool and Stranraer, despite the government denying checks will be necessary, reports the media outlet."
                android:textColor="@color/black"
                android:textSize="@dimen/_16dp"
                android:id="@+id/tvEventDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvTextEventDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEventNear"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvTextEventNear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_width="0dp"
                android:layout_height="107dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>